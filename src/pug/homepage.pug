block main

  // Hero :: Start
  .hero

    .hero__slides.js-slick-hero
      // scaled by image size
      .hero__item
        picture.hero__item-image
          // 992 and above
          source(
          media="(min-width: 992px)" 
          srcset="http://s2.123123.ru/upload/iblock/141/20191.jpg")
          // less 768px
          source(
          media="(min-width: 0px)" 
          srcset="http://www.shinglas.ru/upload/iblock/9c0/banners3_840.jpg")
          // fallback
          img(src="http://s2.123123.ru/upload/iblock/141/20191.jpg", alt="")
              
			// slide with text
      .hero__item
        picture.hero__item-image
          // 992 and above
          source(
          media="(min-width: 992px)" 
          srcset="http://s2.123123.ru/upload/iblock/0db/20192.jpg")
          // less 768px
          source(
          media="(min-width: 0px)" 
          srcset="http://www.shinglas.ru/upload/iblock/9c0/banners3_840.jpg")
          // fallback
          img(src="http://s2.123123.ru/upload/iblock/0db/20192.jpg", alt="")
          
				.hero__item-desc
					.container-fluid
						strong.hero__item-title 25% скидка <br>на коллекцию <br>атлантика
